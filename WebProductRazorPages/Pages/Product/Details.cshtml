@page "{id:int}"
@model WebProductRazorPages.Pages.Product.DetailsModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.ProductID)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Product.ProductID" disabled />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Product.ProductName" disabled />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Category)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Product.Category" disabled />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Product.Price" disabled />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.UnitsInStock)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Product.UnitsInStock" disabled />
            </dd>
        </dl>
    </div>
    <a asp-page="/Product/Index">Product List</a>
    <a asp-page="/Index">Home</a>
</body>
</html>
